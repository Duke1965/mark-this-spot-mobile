{
  "name": "PINIT - Pin Your Moments",
  "short_name": "PINIT",
  "description": "Discover, capture, and pin your favorite moments and places",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1e40af",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "categories": ["travel", "photography", "lifestyle"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "icons": [
    {
      "src": "/placeholder.svg?height=192&width=192",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/placeholder.svg?height=512&width=512",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Pin",
      "short_name": "Pin",
      "description": "Quickly pin your current location",
      "url": "/?action=quick-pin",
      "icons": [
        {
          "src": "/placeholder.svg?height=96&width=96",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Camera",
      "short_name": "Camera",
      "description": "Open camera to capture moments",
      "url": "/?action=camera",
      "icons": [
        {
          "src": "/placeholder.svg?height=96&width=96",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/shared-place",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+pinit",
      "url": "/shared-place/view?url=%s"
    }
  ]
}
