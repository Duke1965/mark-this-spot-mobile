{
  "name": "PINIT - Pin Your Moments",
  "short_name": "PINIT",
  "description": "Pin your favorite locations and moments with photos, videos, and memories",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#1e3a8a",
  "theme_color": "#3730a3",
  "orientation": "portrait-primary",
  "categories": ["travel", "photography", "social", "lifestyle"],
  "lang": "en",
  "dir": "ltr",
  "icons": [
    {
      "src": "/placeholder.svg?height=192&width=192&text=üìç",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/placeholder.svg?height=512&width=512&text=üìç",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Pin",
      "short_name": "Pin",
      "description": "Quickly pin your current location",
      "url": "/?action=quick-pin",
      "icons": [
        {
          "src": "/placeholder.svg?height=96&width=96&text=üìç",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Camera",
      "short_name": "Camera",
      "description": "Open camera to capture a moment",
      "url": "/?action=camera",
      "icons": [
        {
          "src": "/placeholder.svg?height=96&width=96&text=üì∏",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/shared-place",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+pinit",
      "url": "/shared-place/view?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm", ".mov"]
      }
    }
  ]
}
